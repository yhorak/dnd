@model IEnumerable<DataAccess.Spell>

@{
    ViewBag.Title = "Заклинання";
}

<h2>Spells</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Рівень
        </th>
        <th>
            Ім’я
        </th>
        <th>
            Школа
        </th>
        <th>
            Ритуал
        </th>
        <th>
            Тривалість касту
        </th>
        <th>
            Відстань
        </th>
        <th>
            Тривалість
        </th>
        @*<th>
            Опис
        </th>*@
        <th>
            Vo | So | Ma
        </th>
        @*<th>
            Компонент
        </th>*@
        @*<th>
            Ціль
        </th>*@
        @*<th>
            Тригер
        </th>*@
        @*<th>
            Спаскидок
        </th>*@
        <th>
            Конц.
        </th>
        <th>
            Джерело
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Level)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.School)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsRitual)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CastDuration)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Range)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Duration)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.IsVoiceComponent)
            |
            @Html.DisplayFor(modelItem => item.IsSomaticComponent)
            |
            @Html.DisplayFor(modelItem => item.IsMaterialComponent)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.Component)
        </td>*@
        @*<td>
            @Html.DisplayFor(modelItem => item.Target)
        </td>*@
        @*<td>
            @Html.DisplayFor(modelItem => item.Trigger)
        </td>*@
        @*<td>
            @Html.DisplayFor(modelItem => item.SaveThrow)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.NeedConcentration)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RelatedBook)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
